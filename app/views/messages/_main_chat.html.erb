<div class="main-top">
  <div class="left-header">
    <div class="room-name">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="finish-chat">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main-middle">
  <%= render partial: 'message', collection: @messages %> <%# メッセージ表示部分の呼び出し %>
</div>

<div class="main-bottom">
    <%= form_with model: [@room, @message], class: 'contact-form', local: true do |f| %>
      <div class="form-input">
        <%= f.text_field :content, class: 'message-form', placeholder: 'type a message' %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
    <%= f.submit '送信', class: 'form-submit' %>
    <% end %>
</div>